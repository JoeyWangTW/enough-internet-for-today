{
  "manifest_version": 3,
  "name": "Enough Internet for Today",
  "version": "1.0.0",
  "description": "Web content filter using keywords, Simplified Chinese detection, and AI-powered analysis",
  "icons": {
    "16": "icons/logo_16.png",
    "32": "icons/logo_32.png",
    "48": "icons/logo_48.png",
    "128": "icons/logo_128.png"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["src/content.ts"],
      "run_at": "document_idle"
    }
  ],
  "options_ui": {
    "page": "src/options/options.html",
    "open_in_tab": true
  },
  "action": {
    "default_title": "Enough Internet for Today",
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "icons/logo_16.png",
      "32": "icons/logo_32.png",
      "48": "icons/logo_48.png",
      "128": "icons/logo_128.png"
    }
  }
}
