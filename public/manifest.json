{
  "manifest_version": 3,
  "name": "Content Filter",
  "version": "1.0.0",
  "description": "Block any content you choose using keyword filtering and AI-powered detection via Groq",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["src/content.ts"],
      "run_at": "document_idle"
    }
  ],
  "options_ui": {
    "page": "src/options/options.html",
    "open_in_tab": true
  },
  "action": {
    "default_title": "Content Filter"
  }
}
